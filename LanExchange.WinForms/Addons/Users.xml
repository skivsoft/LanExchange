<?xml version="1.0" encoding="utf-8"?>
<LanExchangeAddon xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <ItemTypes>
    <ItemTypeRef Id="UserPanelItem">
      <ContextMenu>
        <MenuItem Text="Send Email">
          <ShortcutKeys>Ctrl+Enter</ShortcutKeys>
          <ProgramRef Id="mailto:" />
          <ProgramArgs>$(Name) &lt;$(Email)&gt;</ProgramArgs>
        </MenuItem>
      </ContextMenu>
    </ItemTypeRef>
  </ItemTypes>
</LanExchangeAddon>